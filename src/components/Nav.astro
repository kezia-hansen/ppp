<header class="header">
  <a class="logo" href="index.html">
    <img src="../img/logo.png" alt="Logo" />
  </a>
  <input class="menu-btn" type="checkbox" id="menu-btn" />
  <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
  <ul class="menu">
    <li><a href="https://github.com/kezia-hansen">Github</a></li>
    <li><a href="www.linkedin.com/in/keziahansen">LinkedIn</a></li>
    <li><a href="mailto: kezia.hansen02@gmail.com">Email</a></li>
  </ul>
</header>

<style>
  a {
    color: #fda45f;
  }

  /* Header */

  .header {
    background-color: transparent;
    width: 100%;
    position: fixed;
    border-bottom: #cc5819 4px solid;
    z-index: 3;
  }

  .header .logo img {
    width: 50px;
  }

  .header ul {
    margin: 0;
    padding: 0;
    list-style: none;
    overflow: hidden;
    background-color: #cc5819;
  }

  .header li a {
    padding: 20px 30px;
    display: block;
    text-decoration: none;
  }

  .header li a:hover,
  .header .menu-btn:hover {
    color: #cc5819;
  }

  .header .logo {
    display: block;
    float: left;
    font-size: 3em;
    text-decoration: none;
    padding: 0 10px;
  }

  /* Menu */

  .header .menu {
    clear: both;
    max-height: 0;
    transition: max-height 0.2s ease-out;
  }

  .header .menu-icon {
    cursor: pointer;
    display: inline-block;
    float: right;
    padding: 28px 20px;
    position: relative;
    user-select: none;
  }

  .header .menu-icon .navicon {
    background: #cc5819;
    display: block;
    height: 2px;
    position: relative;
    transition: background 0.2s ease-out;
    width: 18px;
  }

  .header .menu-icon .navicon:before,
  .header .menu-icon .navicon:after {
    background: #cc5819;
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    transition: all 0.2s ease-out;
    width: 100%;
  }

  .header .menu-icon .navicon:before {
    top: 5px;
  }

  .header .menu-icon .navicon:after {
    top: -5px;
  }

  .header .menu-btn {
    display: none;
  }

  .header .menu-btn:checked ~ .menu {
    max-height: 260px;
  }

  .header .menu-btn:checked ~ .menu-icon .navicon {
    background: transparent;
  }

  .header .menu-btn:checked ~ .menu-icon .navicon:before {
    transform: rotate(-45deg);
  }

  .header .menu-btn:checked ~ .menu-icon .navicon:after {
    transform: rotate(45deg);
  }

  .header .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:before,
  .header .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:after {
    top: 0;
  }

  /* Wide Screen */

  @media (min-width: 48em) {
    .header {
      border-bottom: none;
    }

    .header ul {
      background-color: transparent;
    }

    .header li {
      float: left;
      margin-top: 40px;
    }
    .header .menu {
      clear: none;
      float: right;
      max-height: none;
    }
    .header .menu-icon {
      display: none;
    }

    .header .logo img {
      width: 112px;
    }
  }
</style>
