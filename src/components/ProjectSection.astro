<section id="projects">
  <p class="section__text__p1">Browse My</p>
  <h1 class="title">Projects</h1>
  <div class="project-details-container">
    <div class="about-containers">
      <div class="details-container color-container">
        <div class="article-container">
          <img src="../img/project1.png" alt="Project 1" class="project-img" />
        </div>
        <div>
          <h2 class="project-sub-title project-title">Redesign af Cph Light Festival</h2>
          <p class="project-sub-p project-p">Role: UI/UX Designer, Frontend Developer (liste-view)</p>
        </div>
        <div class="btn-container">
          <a class="btn btn-color project-btn" href="https://github.com/livzino/light_festival_liv.git">Github</a>
          <a class="btn btn-color project-btn" href="https://copenhagenlightfestival-gruppe4.netlify.app/">Live Demo</a>
        </div>
      </div>
      <div class="details-container color-container">
        <div class="article-container">
          <img src="../img/project2.png" alt="Project 2" class="project-img" />
        </div>
        <div>
          <h2 class="project-sub-title project-title">Redesign af The Korner</h2>
          <p class="project-sub-p project-p">Role: UI/UX Designer, Frontend Developer (accordion), Research Analyst</p>
        </div>
        <div class="btn-container">
          <a class="btn btn-color project-btn" href="https://github.com/misszarakarim/kpop.git">Github</a>
          <a class="btn btn-color project-btn" href="https://the-korner.netlify.app/">Live Demo</a>
        </div>
      </div>
      <div class="details-container color-container">
        <div class="article-container">
          <img src="../img/project3.png" alt="Project 3" class="project-img" />
        </div>
        <div>
          <h2 class="project-sub-title project-title">Redesign af Alive Festival</h2>
          <p class="project-sub-p project-p">Role: Visual Designer, Graphic Designer (Tickets), Frontend Developer</p>
        </div>
        <div class="btn-container">
          <a class="btn btn-color project-btn" href="git@github.com:Rasmusminet/02_redesign.git">Github</a>
          <a class="btn btn-color project-btn" href="https://eclectic-kheer-f1b185.netlify.app/">Live Demo</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section__text {
    align-self: center;
    text-align: center;
  }

  .section__text__p1 {
    text-align: center;
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #6e2200;
  }

  .title {
    font-size: 3rem;
    text-align: center;
    color: #9c2e0e;
  }

  /* BUTTONS */
  .btn-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .btn {
    font-weight: 600;
    transition: all 300ms ease;
    padding: 1rem;
    width: 8rem;
    border-radius: 2rem;
  }

  .btn-color {
    border: #fda45f 0.1rem solid;
    color: #fda45f;
    text-decoration: none;
  }

  .btn-color:hover {
    cursor: pointer;
  }

  .btn-color:hover {
    background: #fda45f;
    border: #fda45f 0.1rem solid;
    color: #cc5819;
  }

  .btn-color {
    background: none;
  }

  .btn-container {
    gap: 1rem;
  }

  .about-containers {
    gap: 2rem;
    margin-bottom: 2rem;
    margin-top: 2rem;
  }

  .about-containers {
    display: flex;
  }

  .details-container {
    padding: 1.5rem;
    flex: 1;
    background: #cc5819;
    border-radius: 2rem;
    border: #cc5819 0.1rem solid;
    border-color: #cc5819;
    text-align: center;
  }

  #project {
    position: relative;
  }

  .project-sub-title {
    color: #cc5819;
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }

  .project-sub-p {
    color: #cc5819;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .project-details-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .article-container {
    display: flex;
    text-align: initial;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 2.5rem;
    justify-content: space-around;
  }

  #projects {
    position: relative;
  }

  .color-container {
    border-color: #cc5819;
    background: #cc5819;
  }

  .project-img {
    border-radius: 2rem;
    width: 90%;
    height: 90%;
  }

  .project-title {
    margin: 1rem;
    color: #9c2e0e;
  }

  .project-p {
    margin: 1rem;
    color: #6e2200;
  }

  @media screen and (max-width: 1400px) {
    .about-containers {
      flex-wrap: wrap;
    }

    #projects {
      height: fit-content;
    }
  }

  @media screen and (max-width: 1200px) {
    #project,
    .project-details-container {
      margin-top: 2rem;
    }

    section {
      height: fit-content;
    }
    section {
      margin: 0 5%;
    }

    .about-containers {
      margin-top: 0;
    }
    .btn-color:hover {
      background: #cc5819;
      border: #fda45f 0.1rem solid;
      color: #fda45f;
    }
  }

  @media screen and (max-width: 600px) {
    .about-containers,
    .btn-container {
      flex-wrap: wrap;
    }

    .project-sub-title {
      font-size: 1.25rem;
    }

    .title {
      font-size: 2rem;
    }

    .btn-color:hover {
      background: #cc5819;
      border: #fda45f 0.1rem solid;
      color: #fda45f;
    }
  }
</style>
