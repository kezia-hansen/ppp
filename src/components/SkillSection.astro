---
import "../style.css";
---

<section id="skill">
  <p class="section__text__p1">what are my</p>
  <h1 class="title">competences & skills</h1>
  <div class="skill-details-container">
    <div class="about-containers">
      <div class="details-container">
        <h2 class="skill-sub-title">Competences</h2>
        <div class="article-container">
          <article class="chart">
            <img src="../img/radarchart.svg" alt="icon of puzzle" />
          </article>
        </div>
      </div>
      <div class="details-container">
        <h2 class="skill-sub-title">Skills</h2>
        <div class="article-container">
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>HTML</h3>
              <p>Experienced</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>CSS</h3>
              <p>Intermediate</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>Javascript</h3>
              <p>Basic</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>Astro</h3>
              <p>Intermediate</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>Illustrator</h3>
              <p>Intermediate</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>Figma</h3>
              <p>Experienced</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>Procreate</h3>
              <p>Experienced</p>
            </div>
          </article>
          <article>
            <img src="../img/skill3.png" alt="checkmark icon" class="icon" />
            <div>
              <h3>UI/UX</h3>
              <p>Intermediate</p>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section__text__p1 {
    text-align: center;
    color: #6e2200;
    font-size: 2rem;
  }

  .title {
    font-size: 4rem;
    text-align: center;
    color: #9c2e0e;
  }

  .about-containers {
    gap: 2rem;
    margin-bottom: 2rem;
    margin-top: 2rem;
  }

  .about-containers,
  .skill-details-container {
    display: flex;
  }

  .icon {
    cursor: pointer;
    height: 2rem;
  }

  .section__pic-container {
    display: flex;
    height: 400px;
    width: 400px;
    margin: 0 auto;
    margin-top: 4rem;
  }

  .details-container {
    padding: 1.5rem;
    flex: 1;
    background: #fee1bb;
    border-radius: 2rem;
    border: #cc5819 0.3rem solid;
    text-align: center;
  }

  .section-container {
    gap: 4rem;
    height: 80%;
  }

  .skill-sub-title {
    color: #cc5819;
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }

  .skill-details-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .article-container {
    display: flex;
    text-align: initial;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 2.5rem;
    justify-content: space-around;
  }

  article {
    display: flex;
    width: 10rem;
    justify-content: space-around;
    gap: 0.5rem;
    white-space: nowrap;
  }

  article.icon {
    cursor: default;
  }

  h3 {
    color: #9c2e0e;
  }

  p {
    color: #6e2200;
  }

  article.chart {
    margin-top: -3rem;
  }

  .chart img {
    width: 360px;
    height: 360px;
  }

  @media screen and (max-width: 600px) {
    article {
      font-size: 1rem;
    }

    .about-containers {
      flex-wrap: wrap;
    }

    .skill-sub-title {
      font-size: 1.25rem;
    }

    .section__pic-container {
      width: auto;
      height: 46vw;
      justify-content: center;
    }
    .chart img {
      width: 300px;
      height: 300px;
    }
    .section__text__p2 {
      font-size: 1.25rem;
    }
    .title {
      font-size: 2rem;
    }
    .text-container {
      text-align: justify;
    }
  }

  @media screen and (max-width: 1200px) {
    #skill,
    .skill-details-container {
      margin-top: 2rem;
    }

    .section-container {
      display: block;
    }
    section,
    .section-container {
      height: fit-content;
    }
    section {
      margin: 0 5%;
    }
    .section__pic-container {
      width: 275px;
      height: 275px;
      margin: 0 auto 2rem;
    }
    .about-containers {
      margin-top: 0;
    }
  }

  @media screen and (max-width: 1400px) {
    .about-containers {
      flex-wrap: wrap;
    }
  }
</style>
